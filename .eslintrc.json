{
  "extends": ["eslint:recommended"],
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
        "ecmaVersion": 6
  },
  "plugins": [
    "html",
    "promise"
  ],
  "rules": {
    "no-var": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }]
  },
  "globals": {
    "Polymer": true
  }
}
